{
    // Configuration for running and debugging Python code in Vscode.
    // See https://code.visualstudio.com/Docs/editor/debugging#_launch-configurations
    //
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "justMyCode": true,
            "request": "launch",
            "program": "${file}",
            "envFile": "${workspaceFolder}/.venv",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}